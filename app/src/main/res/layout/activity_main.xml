<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="3sp"
            android:paddingRight="3sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnNum1"
                    style="@style/calcButton"
                    android:onClick="onClick1"
                    android:text="1" />

                <Button
                    android:id="@+id/btnNum2"
                    style="@style/calcButton"
                    android:onClick="onClick2"
                    android:text="2" />

                <Button
                    android:id="@+id/btnNum3"
                    style="@style/calcButton"
                    android:onClick="onClick3"
                    android:text="3" />

                <Button
                    android:id="@+id/btnOperatorPlus"
                    style="@style/calcButton"
                    android:onClick="onPlusClick"
                    android:text="+" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnNum4"
                    style="@style/calcButton"
                    android:onClick="onClick4"
                    android:text="4" />

                <Button
                    android:id="@+id/btnNum5"
                    style="@style/calcButton"
                    android:onClick="onClick5"
                    android:text="5" />

                <Button
                    android:id="@+id/btnNum6"
                    style="@style/calcButton"
                    android:onClick="onClick6"
                    android:text="6" />

                <Button
                    android:id="@+id/btnOperatorMinus"
                    style="@style/calcButton"
                    android:onClick="onMinusClick"
                    android:text="-" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnNum7"
                    style="@style/calcButton"
                    android:onClick="onClick7"
                    android:text="7" />

                <Button
                    android:id="@+id/btnNum8"
                    style="@style/calcButton"
                    android:onClick="onClick8"
                    android:text="8" />

                <Button
                    android:id="@+id/btnNum9"
                    style="@style/calcButton"
                    android:onClick="onClick9"
                    android:text="9" />

                <Button
                    android:id="@+id/btnOperatorMultiply"
                    style="@style/calcButton"
                    android:onClick="onMultClick"
                    android:text="*" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnOperatorClear"
                    style="@style/calcButton"
                    android:onClick="onClearClick"
                    android:text="C" />

                <Button
                    android:id="@+id/btnNum0"
                    style="@style/calcButton"
                    android:onClick="onClick0"
                    android:text="0" />

                <Button
                    android:id="@+id/btnOperatorEquals"
                    style="@style/calcButton"
                    android:onClick="onEqualsClick"
                    android:text="=" />

                <Button
                    android:id="@+id/btnOperatorDivide"
                    style="@style/calcButton"
                    android:onClick="onDivideCLick"
                    android:text="/" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/calcValueView"
            style="@style/heading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123.213"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.837" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>